<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="463.0" prefWidth="682.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atm.ChangePin">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="124.0" prefWidth="1000.0" text="Welcome username, Enter fields below to change transaction pin" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="6.0" prefWidth="600.0" spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="43.0" prefWidth="600.0">
                     <children>
                        <Label fx:id="passLabel" text="Password: ">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="passField" alignment="CENTER" prefHeight="31.0" prefWidth="275.0">
                           <font>
                              <Font size="16.0" />
                           </font></TextField>
                     </children>
                  </HBox>
                  <Label fx:id="incPass" alignment="CENTER" prefHeight="18.0" prefWidth="600.0" text="Incorrect Password. Please Try again." textFill="RED" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <HBox alignment="CENTER" prefHeight="36.0" prefWidth="600.0">
                     <children>
                        <Label fx:id="pinLabel" text="  New Pin: ">
                           <font>
                              <Font size="24.0" />
                           </font></Label>
                        <TextField fx:id="pinField" alignment="CENTER" prefHeight="31.0" prefWidth="275.0">
                           <font>
                              <Font size="16.0" />
                           </font></TextField>
                     </children>
                  </HBox>
                  <Label fx:id="incPin" alignment="CENTER" prefHeight="18.0" prefWidth="615.0" text="Only 4 digit pins allowed" textFill="RED" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <Button fx:id="pinBut" mnemonicParsing="false" onAction="#chaPin" prefHeight="34.0" prefWidth="92.0" text="Change Pin" />
                  <Button mnemonicParsing="false" onAction="#gtDash" prefHeight="37.0" prefWidth="208.0" text="Go To Dashboard">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
